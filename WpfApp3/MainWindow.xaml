<Window x:Class="MouseCoordinatesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mouse Coordinates App" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Start Recording" Click="StartRecording_Click" HorizontalAlignment="Center" Margin="5" />

        <DataGrid Name="coordinatesDataGrid" Grid.Row="1" AutoGenerateColumns="True" />
    </Grid>
</Window>